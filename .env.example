# Application
APP_PORT=8080

# MySQL Database
MYSQL_ROOT_PASSWORD=your_root_password
MYSQL_DATABASE=blog
MYSQL_USER=app
MYSQL_PASSWORD=your_app_password
MYSQL_PORT=3306

# Spring Profile
SPRING_PROFILES_ACTIVE=local

# JWT
JWT_SECRET=your-super-secret-jwt-key-at-least-32-bytes-long-change-this
# Access Token Expiration (seconds) - default: 900 (15 minutes)
JWT_ACCESS_EXP=900
# Refresh Token Expiration (seconds) - default: 1209600 (14 days)
JWT_REFRESH_EXP=1209600

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# OAuth2 - Google
OAUTH_GOOGLE_CLIENT_ID=your-google-client-id
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth2 - Kakao
OAUTH_KAKAO_CLIENT_ID=your-kakao-client-id
OAUTH_KAKAO_CLIENT_SECRET=your-kakao-client-secret
