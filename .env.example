# ========================================
# 애플리케이션 기본 설정
# ========================================
APP_PORT=8080

# 환경 설정 (local 또는 prod로 변경)
# local: 로컬 개발 환경
# prod: 프로덕션 배포 환경
SPRING_PROFILES_ACTIVE=local

# ========================================
# URL 설정 (환경에 따라 변경)
# ========================================
# 프론트엔드 URL (OAuth 로그인 후 리다이렉트될 주소)
# local: http://localhost:8080
# prod: https://yourdomain.com
FRONTEND_URL=http://localhost:8080

# 백엔드 API URL (Swagger 문서에 표시될 서버 주소)
# local: http://localhost:8080
# prod: https://api.yourdomain.com
BACKEND_URL=http://localhost:8080

# CORS 허용 도메인 (쉼표로 구분)
# local: http://localhost:3000,http://localhost:8080
# prod: https://yourdomain.com,https://api.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ========================================
# MySQL Database
# ========================================
# MySQL Host (Docker 사용시 'mysql', 로컬 설치시 'localhost')
# local: localhost
# prod: your-db-host (RDS 엔드포인트 등)
MYSQL_HOST=localhost

MYSQL_ROOT_PASSWORD=your_root_password
MYSQL_DATABASE=blog
MYSQL_USER=app
MYSQL_PASSWORD=your_app_password
MYSQL_PORT=3306

# ========================================
# JWT
# ========================================
# 최소 32바이트 이상의 안전한 키 사용 필수
JWT_SECRET=your-super-secret-jwt-key-at-least-32-bytes-long-change-this

# Access Token 만료 시간 (초) - 기본: 900 (15분)
JWT_ACCESS_EXP=900

# Refresh Token 만료 시간 (초) - 기본: 1209600 (14일)
JWT_REFRESH_EXP=1209600

# ========================================
# Redis
# ========================================
# Redis Host (Docker 사용시 'redis', 로컬 설치시 'localhost')
# local: localhost
# prod: your-redis-host (ElastiCache 엔드포인트 등)
REDIS_HOST=localhost
REDIS_PORT=6379

# ========================================
# Firebase 설정 (백엔드)
# ========================================
# Firebase Console > Project Settings > Service Accounts
# "Generate new private key" 버튼 클릭하여 JSON 파일 다운로드
# 다운로드한 파일을 src/main/resources/firebase-service-account.json에 저장

# Firebase 프로젝트 ID
FIREBASE_PROJECT_ID=your-project-id

# Firebase Admin SDK 서비스 계정 키 파일 경로
# 로컬: src/main/resources/firebase-service-account.json
# 운영: /path/to/firebase-service-account.json
FIREBASE_SERVICE_ACCOUNT_PATH=src/main/resources/firebase-service-account.json

# ========================================
# Firebase 설정 (프론트엔드)
# ========================================
# Firebase Console > Project Settings > General 에서 확인 가능
REACT_APP_FIREBASE_API_KEY=your-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=your-app-id

# ========================================
# Kakao 설정
# ========================================
# Kakao Developers에서 발급
# https://developers.kakao.com/console/app
# 백엔드: REST API 키
KAKAO_REST_API_KEY=your-kakao-rest-api-key

# 프론트엔드: JavaScript 키
REACT_APP_KAKAO_JAVASCRIPT_KEY=your-kakao-javascript-key
